<main class="container">
  <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
    <div class="col-lg-6 px-0">
      <h1 class="display-4 fst-italic"><%= @user.email %></h1>
<h4>Articles</h4>
<ul>
  <% @user.articles.each do |article| %>
    <li>
      <%= link_to article.title, article %>
    </li>
  <% end %>
</ul>
<h4>Commented articles</h4>
<ul>
  <% @user.comments.each do |comment| %>
    <li>
      <%= link_to comment.article.title, comment.article %>
    </li>
  <% end %>
</ul>
<h4>Liked articles</h4>
<ul>
  <% @user.likes.each do |like| %>
    <li>
      <%=link_to like.article.title, like.article %>
    </li>
  <% end %>
</ul>
 
<p><%= link_to sanitize("< Back"), root_path %></p>
</div>
</div>
</main>