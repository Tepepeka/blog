<div class="container">
  <header class="border-bottom lh-1 py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">
        <% if user_signed_in? %>
          <%= link_to "New Article", new_article_path, class:"btn btn-sm btn-outline-primary" %>
          <% if current_user&.admin? %>
            <%= link_to "Admin", admin_dashboard_path, class:"btn btn-sm btn-outline-primary" %>
          <% end %>
        <% end %>
      </div>
      <div class="col-4 text-center">
        <%= link_to "TppK", root_path, class:"blog-header-logo text-body-emphasis text-decoration-none"%>
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center">
        <% if user_signed_in? %>
          <%= link_to current_user.email, user_path(current_user), class:"mx-2" %>
          <%= link_to "Sign out", destroy_user_session_path,
              data: { turbo_method: :delete,
                    turbo_confirm: "Are you sure?",
                    },
              class:"btn btn-sm btn-outline-danger"%>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, class:"btn btn-sm btn-outline-primary"%>
        <%end%>
      </div>
    </div>
  </header>
  <div class="nav-scroller py-1 mb-3 border-bottom">
    <nav class="nav nav-underline justify-content">
    <%= link_to "All", articles_path, class:"nav-item nav-link link-body-emphasis" %>
      <% Category.all.each do |category| %>
        <%= link_to category.name, category_path(category), class:"nav-item nav-link link-body-emphasis" %>
      <% end %>
    </nav>
  </div>
</div>